{
  "version": 2,
  "builds": [
    {
      "src": "react-app/package.json",
      "use": "@vercel/static-build",
      "options": {
        "installCommand": "cd react-app && npm install",
        "buildCommand": "cd react-app && npm run build",
        "outputDirectory": "react-app/dist"
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/react-app/dist/index.html"
    }
  ]
}
